<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1F1F">

    <ImageView
        android:id="@+id/final_animal_card_topbar_harpseal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_top_bar_harpseal" />

    <TextView
        android:id="@+id/final_animal_card_tv_mission_name_harpseal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:text=""
        android:textColor="@color/stroke_harpseal"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/final_animal_card_topbar_harpseal"
        app:layout_constraintEnd_toEndOf="@+id/final_animal_card_topbar_harpseal"
        app:layout_constraintStart_toStartOf="@+id/final_animal_card_topbar_harpseal" />

    <ImageButton
        android:id="@+id/final_animal_card_back_btn_to_add_frag_harpseal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="18dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/final_animal_card_topbar_harpseal"
        app:layout_constraintStart_toStartOf="@+id/final_animal_card_topbar_harpseal"
        app:srcCompat="@drawable/ic_back_btn_harpseal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/final_add_harpseal_cardview"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/final_animal_card_topbar_harpseal"
        tools:listitem="@layout/maincard_layout"
        tools:itemCount="1"
        />

    <Button
        android:id="@+id/final_animal_card_btn_to_get_maincard_harpseal"
        style="@null"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/ic_btn_circle_full"
        android:fontFamily="@font/notosanskr_black"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/final_add_harpseal_cardview" />

    <TextView
        android:id="@+id/final_animal_card_btnText_harpseal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="start"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:translationZ="10dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/final_animal_card_btn_to_get_maincard_harpseal"
        app:layout_constraintEnd_toEndOf="@+id/final_animal_card_btn_to_get_maincard_harpseal"
        app:layout_constraintStart_toStartOf="@+id/final_animal_card_btn_to_get_maincard_harpseal"
        app:layout_constraintTop_toTopOf="@+id/final_animal_card_btn_to_get_maincard_harpseal"/>


</androidx.constraintlayout.widget.ConstraintLayout>