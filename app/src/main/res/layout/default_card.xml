<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="255dp"
    android:layout_height="409dp"
    android:id="@+id/mainCard_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="#4F4F4F"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    >

    <RelativeLayout
        android:layout_width="255dp"
        android:layout_height="409dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_mission_name"
            android:layout_width="158dp"
            android:layout_height="106dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:text="새로운\n습관을\n형성\n해볼까요?"
            android:textColor="#C6C6C6"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/plus_card_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_bottom"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:background="@null"
            card_view:srcCompat="@drawable/ic_plus_card_btn" />

        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"
            android:text="ani more"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>