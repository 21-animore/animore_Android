<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PastFragment"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/home_more_card_topbar_bengal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_top_bar_bengaltiger" />

    <TextView
        android:id="@+id/home_more_card_tv_mission_name_bengal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:text="중고마켓 이용하기"
        android:textColor="@color/stroke_bengaltiger"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/home_more_card_topbar_bengal"
        app:layout_constraintEnd_toEndOf="@+id/home_more_card_topbar_bengal"
        app:layout_constraintStart_toStartOf="@+id/home_more_card_topbar_bengal" />

    <ImageButton
        android:id="@+id/home_more_card_back_btn_to_add_frag_bengal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="18dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/home_more_card_topbar_bengal"
        app:layout_constraintStart_toStartOf="@+id/home_more_card_topbar_bengal"
        app:srcCompat="@drawable/ic_back_btn_bengal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_more_card_front"
        android:layout_width="349dp"
        android:layout_height="502dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_more_card_topbar_bengal"
        android:layout_marginTop="19dp"
        tools:listitem="@layout/more_card_front_layout"/>

    <ImageButton
        android:id="@+id/home_more_card_btn_giveup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="19dp"
        android:background="@null"
        android:src="@drawable/ic_btn_giveup"
        app:layout_constraintTop_toBottomOf="@+id/home_more_card_front"
        app:layout_constraintEnd_toStartOf="@+id/btn_download"/>

    <ImageButton
        android:id="@+id/btn_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="30dp"
        android:background="@null"
        android:src="@drawable/ic_btn_download"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_more_card_front" />


</androidx.constraintlayout.widget.ConstraintLayout>