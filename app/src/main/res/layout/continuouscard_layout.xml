<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="255dp"
    android:layout_height="409dp"
    android:id="@+id/maincard_continuous_view"
    android:layout_margin="5dp"
    card_view:cardBackgroundColor="@color/back_guanicoe"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    >

    <RelativeLayout
        android:layout_width="255dp"
        android:layout_height="409dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_mission_name"
            android:layout_width="158dp"
            android:layout_height="106dp"
            android:lineSpacingExtra ="-12dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:text="중고마켓 이용하기"
            android:textColor="@color/stroke_guanicoe"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/tv_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:text="연속 7일"
            android:textColor="@color/stroke_guanicoe"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_mission_category_eng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserrat_medium"
            android:includeFontPadding="false"
            android:text="Living Habit"
            android:textColor="@color/stroke_guanicoe"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_mission_category_kor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="105dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/notosanskr_medium"
            android:includeFontPadding="false"
            android:text="생활 습관 개선"
            android:textColor="@color/stroke_guanicoe"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_day_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mission_category_eng"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:includeFontPadding="false"
            android:text="M"
            android:textColor="@color/stroke_guanicoe"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/tv_day_mon"
            android:layout_below="@+id/tv_mission_category_eng"
            android:fontFamily="@font/montserrat_bold"
            android:includeFontPadding="false"
            android:text="T"
            android:textColor="@color/stroke_guanicoe"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/tv_day_tue"
            android:layout_below="@+id/tv_mission_category_eng"
            android:fontFamily="@font/montserrat_bold"
            android:includeFontPadding="false"
            android:text="W"
            android:textColor="@color/stroke_guanicoe"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/tv_day_wed"
            android:layout_below="@+id/tv_mission_category_eng"
            android:fontFamily="@font/montserrat_bold"
            android:includeFontPadding="false"
            android:text="T"
            android:textColor="@color/stroke_guanicoe"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/tv_day_thu"
            android:layout_below="@+id/tv_mission_category_eng"
            android:fontFamily="@font/montserrat_bold"
            android:includeFontPadding="false"
            android:text="F"
            android:textColor="@color/stroke_guanicoe"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/tv_day_fri"
            android:layout_below="@+id/tv_mission_category_eng"
            android:fontFamily="@font/montserrat_bold"
            android:includeFontPadding="false"
            android:text="S"
            android:textColor="@color/stroke_guanicoe"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_day_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="21dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@+id/tv_day_sat"
            android:layout_below="@+id/tv_mission_category_eng"
            android:fontFamily="@font/montserrat_bold"
            android:includeFontPadding="false"
            android:text="S"
            android:textColor="@color/stroke_guanicoe"
            android:textSize="14sp" />

        <TableLayout
            android:id="@+id/myTable"
            android:layout_width="363dp"
            android:layout_height="130dp"
            android:layout_below="@+id/tv_day_mon"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"
            android:text="Think one more"
            android:textColor="@color/stroke_guanicoe"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/bottom_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            card_view:srcCompat="@drawable/ic_continuous_img_guanicoe" />

        <Button
            android:id="@+id/dailyCheckBtn"
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:text="오늘 완료하기"
            android:includeFontPadding="false"
            android:textSize="12sp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/complete_guanicoe"
            android:textColor="@color/back_guanicoe"
            android:fontFamily="@font/notosanskr_bold"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>