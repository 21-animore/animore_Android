<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="115dp"
    android:layout_height="168dp"
    android:id="@+id/pastcard_view"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="3dp"
    card_view:cardBackgroundColor="#00000000"
    >

    <ImageView
        android:id="@+id/success_stroke"
        android:layout_width="115dp"
        android:layout_height="168dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:srcCompat="@drawable/ic_pastcard_stroke_bengal" />

    <ImageView
        android:id="@+id/fail_cover"
        android:layout_width="105dp"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        card_view:srcCompat="@drawable/ic_fail"
        android:translationZ="10dp"/>

    <RelativeLayout
        android:layout_width="105dp"
        android:layout_height="158dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/background"
            android:layout_width="105dp"
            android:layout_height="158dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            card_view:srcCompat="@drawable/ic_pastcard_back_bengal" />

      <TextView
        android:id="@+id/tv_successFlag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
          android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="COMPELETE"
        android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_cardName"
            android:layout_width="59dp"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/notosanskr_bold"
            android:includeFontPadding="false"
            android:text="동영상 덜 보기"
            android:textColor="@color/stroke_bengaltiger"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/img_card_category"
            card_view:srcCompat="@drawable/ic_past_card_bengaltiger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="64dp"
             />

        <TextView
            android:id="@+id/tv_achieveCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:includeFontPadding="false"
            android:text="3"
            android:textColor="@color/stroke_bengaltiger"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_totalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="17.5dp"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/montserrat_medium"
            android:includeFontPadding="false"
            android:text="/21"
            android:textColor="@color/stroke_bengaltiger"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_medium"
            android:includeFontPadding="false"
            android:text="10/1~10/21"
            android:textColor="@color/stroke_bengaltiger"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>