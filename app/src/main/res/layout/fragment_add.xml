<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddFragment"
    android:background="#1F1F1F">

    <ImageView
        android:id="@+id/add_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_top_bar_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:text="챌린지"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/add_titlebar"
        app:layout_constraintEnd_toEndOf="@+id/add_titlebar"
        app:layout_constraintStart_toStartOf="@+id/add_titlebar" />

    <TextView
        android:id="@+id/add_tv_bigTitle"
        android:layout_width="281dp"
        android:layout_height="143dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/notosanskr_bold"
        android:text="멸종 위기 동물을 도와주세요!"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_tv_bigTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/add_btn_to_add_animal_guanicoe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_add_button_guanicoe"
                android:layout_marginBottom="17dp"/>

            <ImageButton
                android:id="@+id/add_btn_to_add_animal_illipika"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_add_button_illipika"
                android:layout_marginBottom="17dp"/>

            <ImageButton
                android:id="@+id/add_btn_to_add_animal_harpseal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_add_button_harpseal"
                android:layout_marginBottom="17dp"/>

            <ImageButton
                android:id="@+id/add_btn_to_add_animal_java"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_add_button_javahornhawk"
                android:layout_marginBottom="17dp"/>

            <ImageButton
                android:id="@+id/add_btn_to_add_animal_bengal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:src="@drawable/ic_add_button_bengaltiger"
                android:layout_marginBottom="17dp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>