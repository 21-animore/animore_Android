<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1F1F">

    <ImageView
        android:id="@+id/intro_animal_card_topbar_bengal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_top_bar_bengaltiger" />

    <ImageButton
        android:id="@+id/intro_animal_card_back_btn_to_add_frag_bengal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="18dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/intro_animal_card_topbar_bengal"
        app:layout_constraintStart_toStartOf="@+id/intro_animal_card_topbar_bengal"
        app:srcCompat="@drawable/ic_back_btn_bengal" />

    <TextView
        android:id="@+id/intro_animal_card_tv_title_bengal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:text="벵갈호랑이 구출하기"
        android:textColor="@color/stroke_bengaltiger"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/intro_animal_card_topbar_bengal"
        app:layout_constraintEnd_toEndOf="@+id/intro_animal_card_topbar_bengal"
        app:layout_constraintStart_toStartOf="@+id/intro_animal_card_topbar_bengal" />

    <include
        android:id="@+id/intro_animal_card_layout_bengal"
        layout="@layout/animal_card_layout_bengaltiger"
        android:layout_width="255dp"
        android:layout_height="409dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_animal_card_topbar_bengal" />

    <TextView
        android:id="@+id/intro_animal_card_text_bengal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_bold"
        android:text="소비 습관 개선 챌린지"
        android:layout_marginTop="5dp"
        android:textSize="14dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_animal_card_layout_bengal" />

    <Button
        android:id="@+id/intro_animal_card_btn_to_get_randomcard_bengaltiger"
        style="@null"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_btn_circle_full"
        android:fontFamily="@font/notosanskr_black"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_animal_card_text_bengal" />

    <TextView
        android:id="@+id/intro_animal_card_btnText_bengal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notosanskr_black"
        android:text="랜덤카드\n받기"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:translationZ="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/intro_animal_card_btn_to_get_randomcard_bengaltiger"
        app:layout_constraintEnd_toEndOf="@+id/intro_animal_card_btn_to_get_randomcard_bengaltiger"
        app:layout_constraintStart_toStartOf="@+id/intro_animal_card_btn_to_get_randomcard_bengaltiger"
        app:layout_constraintTop_toTopOf="@+id/intro_animal_card_btn_to_get_randomcard_bengaltiger"/>

</androidx.constraintlayout.widget.ConstraintLayout>